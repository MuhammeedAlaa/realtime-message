<%= render 'shared/errors', object: @user %>
<h1 align="center">Welcome to the Real Time message application</h1>
<h4 class="ui center aligned medium icon header">
    <i class="circular blue chat icon"></i>
    Sign Up to start chatting
</h4>
<div class="center">
    <div class="ui placeholder segment">
        <div class="ui two column very relaxed stackable grid center-signup">
            <div class="column">
                <%= form_for(:user, html: {class: "ui form", role: "form"}, url: signup_path) do |f|%>
                    <div class="field">
                        <%= f.label :username, "Username", style: "display: flex;justify-content: center;"%>
                        <div class="ui left icon input">
                            <%= f.text_field :username, placeholder: "Username"%>
                            <i class="user icon"></i>
                        </div>
                    </div>
                    <div class="field">
                        <%= f.label :password, "Password", style: "display: flex;justify-content: center;"%>
                        <div class="ui left icon input">
                            <%= f.password_field :password, placeholder: "Password"%>
                            <i class="lock icon"></i>
                        </div>
                    </div>
                    <%= f.submit "Login", class: "ui blue submit button" %> 
                <% end %>
            </div>
        </div>
    </div>
</div>
