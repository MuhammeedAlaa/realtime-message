<% if object.errors.any? %>
  <div class="ui error message transition">
        <i class="close icon"></i>
        <div class="header">
            <h2><%= pluralize(object.errors.count, "Error") %> The following error prevent the user from being saved:</h2>
            <ul>
              <% object.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
        </div>
    </div>
<% end %>

